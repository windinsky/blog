var config = '../database/config.json';
var adapter = require(config.adapterPath);
adapter.config(config);
<% console.log(modelName) %>
function <%= modelName %>(){
	this.find = function(id){
		var sql = 'select * from <%= tableName %> where id = ' + id;
		return adapter.query(sql);
	}
	<% for(var i = 0 ; i < columns.length ; i++){ %>
	this.findBy<%= columns[i].camelname %>	 = function(<%= columns[i].name %>){
		<% if(['int,bigint,smallint,tinyint,mediumint,float,double'].indexOf(columns[i].type) != -1){ %>
		var sql = 'select * from <%= tableName %> where <%= columns[i].name %>='+<%= columns[i].name %>;
		<% }else{ %>
		var sql = 'select * from <%= tableName %> where <%= columns[i].name %>="'+<%= columns[i].name %>+'"';
		<% } %>
		return adapter.query(sql);
	}
	<% } %>
}

module.exports = <%= modelName %>;